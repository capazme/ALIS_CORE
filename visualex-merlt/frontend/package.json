{
  "name": "@visualex/merlt-frontend",
  "version": "0.1.0",
  "private": true,
  "description": "React components for VisuaLex-MERL-T integration",
  "type": "module",
  "main": "./dist/merlt-plugin.js",
  "module": "./dist/merlt-plugin.js",
  "types": "./dist/types/plugin/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/plugin/index.d.ts",
      "import": "./dist/merlt-plugin.js"
    },
    "./plugin": {
      "types": "./dist/types/plugin/index.d.ts",
      "import": "./dist/merlt-plugin.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "npm run build:lib && npm run build:app",
    "build:lib": "tsup",
    "build:app": "tsc && vite build",
    "build:plugin": "npm run build:plugin:types && npm run build:plugin:bundle",
    "build:plugin:types": "tsc --project tsconfig.plugin.json",
    "build:plugin:bundle": "vite build --mode plugin",
    "lint": "eslint src --ext ts,tsx",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "@tanstack/react-query": "^5.0.0",
    "zustand": "^5.0.0",
    "recharts": "^2.10.0",
    "framer-motion": "^11.0.0",
    "lucide-react": "^0.451.0",
    "reagraph": "^4.5.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "tsup": "^8.0.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  }
}
